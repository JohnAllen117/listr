<h1><strong><%= @category.name %></strong></h1>
<% if !@lists.empty? %>
  <div class="row collapse">
    <div class="small-12 large-4 columns">
      <ul class="list">
      <% @lists.each do |list| %>
        <li class="list_element"><%= link_to "#{list.likes.count} - #{list.title}", list_path(list) %></li>
      <% end %>
      </ul>
    </div>
    <div class="small-12 show-for-medium-up">
      <h1>Markdown</h1>
      <p>
        other stuff
      </p>
    </div>
  </div>
<% else %>
  <p>Sorry, nothing here! Maybe you should make something?</p>
<% end %>
