<h1 class="category-title"><strong><%= @category.name %></strong></h1>
<% if !@lists.empty? %>
  <div class="row collapse">
    <div>
      <ul class="list">
      <% @lists.each do |list| %>
        <li class="list-item">
          <div class="list-item-header">
            <p>
              <%= "#{list.likes.count} - #{list.title}" %>
              <%= link_to "<i class="fa fa-arrow-right"></i>", list, class: "index-content-link right" %>
            </p>
          </div>

          <div class="list-item-preview markdown-content">
            <h1> List Content </h1>
            <%= render_markdown(list.content) %>
            <%= link_to 'Go', list_path(list) %>
          </div>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <p>Sorry, nothing here! Maybe you should make something?</p>
<% end %>
