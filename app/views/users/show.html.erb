<h1><%= @user.name %></h1>
<ul>
  <% @user.lists.each do |list| %>
    <li><%= list.likes.count %> - <%= link_to list.title, list %></li>
  <% end %>
</ul>
<% if current_user && current_user == @user %>
  <%= link_to "Delete", @user, class: "button small alert radius", method: :delete, data: { confirm: 'Are you sure?' } %><br>
<% end %>
